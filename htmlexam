x=x+(y*5.56);
}
var p='<br>'
alert('Consumer No: '+custnum+'\n'+'Consumer Name: '+custname+'\n'+'Email Address: '+email+'\n'+'Number of units: '+units+'\n'+'Amount to be paid: '+x);
}



